<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".CalculateAndResultActivity">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/amount_of_base_needed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ammount of base needed"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/amount_of_binder_needed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ammount of binder needed"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/amount_of_loop_needed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ammount of loop needed"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/base_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base Count :"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/base_stitch_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base stitch length"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/binder_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binder Count :"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/binder_stitch_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Binder stitch length"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/loop_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loop Count :"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/loop_stitch_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loop stitch length"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:id="@+id/base"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/kk"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Cotton"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/kk_100"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Polyester"
                    android:textSize="18sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>